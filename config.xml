<?xml version='1.0' encoding='utf-8'?>
<widget id="com.leobottaro.hybridbase" version="1.0.0"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Leocb's Hybrid App Basecode</name>
  <description>
        A simple hybrid app basecode
  </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
        github.com/leocb
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <splash density="port-ldpi" src="src/assets/splash.jpg" />
    <splash density="port-mdpi" src="src/assets/splash.jpg" />
    <splash density="port-hdpi" src="src/assets/splash.jpg" />
    <splash density="port-xhdpi" src="src/assets/splash.jpg" />
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <preference name="android-minSdkVersion" value="19" />
  <preference name="android-targetSdkVersion" value="19" />
  <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <engine name="android" spec="7.1.1" />
</widget>
